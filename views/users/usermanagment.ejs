<% layout('layouts/boilerplate')%>

<table class="table table-striped table-dark">
    <thead>
      <tr>
        <th scope="col">Username</th>
        <th scope="col">E-Mail</th>
        <th scope="col">Is admin?</th>
        <th scope="col"> </th>
      </tr>
    </thead>
    <tbody>
        <% for (let user in users) { %>
      <tr>
        <th scope="row"><%= users[user].username%></th>
        <td><%= users[user].email%></td>
        <td><%= users[user].isAdmin%>
            <div class="form-check form-switch">
             <form action="/toggleadmin">
            <input class="form-check-input" type="checkbox" id="isAdmin" onChange="this.form.submit()"
            <% if (users[user].isAdmin) {%> 
             checked
             <% } %>
            value= <%=users[user]._id %>  > 
            </form>
            <label class="form-check-label" for="isAdmin" checked=>Default switch checkbox input</label>
            </div></td>
        <td> 
            <form action="/delete">
                <button type="submit" value=<%=users[user]._id %> id="id" name="id" >DELETE USER</button>
            </form>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>